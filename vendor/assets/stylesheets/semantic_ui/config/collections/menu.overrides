/*******************************
         Site Overrides
*******************************/

.menu {
padding: .5em 0;
}

.ui.large.menu {
  font-size: 1.3rem;
}

.ui.menu .item > img:not(.ui) {
  width: 2.7em;
  margin-top: -0.2em;
}

.ui.menu .ui.dropdown .menu > .item {
  font-size: 1.1rem !important;
  font-weight: 100 !important;
}

.ui.menu .ui.dropdown .menu .item {
  padding: 4.5px 15px;
}

.ui.menu .dropdown.item .menu {
  min-width: max-content;
}

.ui.menu .item, .ui.menu .menu .item {
  border-radius: 15px;
  margin-right: .4em;
  padding: 4.5px 15px;
}

.ui.menu.fixed .item:first-child, .ui.menu.fixed .item:last-child {
  border-radius: 15px !important;
}

/* MotiBlue */
.ui.inverted.menu .moti-blue.active.item,
.ui.inverted.moti-blue.menu {
  background-color: @moti-blue;
}
.ui.inverted.moti-blue.menu .item:before {
  background-color: @invertedColoredDividerBackground;
}
.ui.inverted.moti-blue.menu .active.item {
  background-color: @invertedColoredActiveBackground !important;
}
